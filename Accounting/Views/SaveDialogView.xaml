<UserControl x:Class="Accounting.Views.SaveDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Accounting.Views" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Názov súboru:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <dxg:TextEdit  Grid.Row="0" Grid.Column="1" Margin="5,5,0,5" Width ="255" EditValue="{Binding FileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, 
            NotifyOnValidationError=True, ValidatesOnDataErrors=True}"/>
    </Grid>
</UserControl>
