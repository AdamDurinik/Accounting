<UserControl x:Class="PriceTags.Views.HintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PriceTags.Views"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             mc:Ignorable="d">
    <Grid>
        <dxg:GridControl ItemsSource="{Binding Names}" AutoGenerateColumns="None" >
                <dxg:GridControl.View>
                    <dxg:TableView AllowPerPixelScrolling="True" AutoWidth="True" ShowGroupPanel="False" ShowCheckBoxSelectorColumn="True"
                    ShowFilterPanelMode="ShowAlways" NavigationStyle="Cell" AllowEditing="True" AllowColumnMoving="True"
                    CheckBoxSelectorColumnWidth="35" NewItemRowPosition="Bottom" EnableImmediatePosting="True" IsTotalSummaryMenuEnabled="False" ShowGroupedColumns="True"  />
                </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Name" Header="Názov" AllowEditing="True" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</UserControl>
