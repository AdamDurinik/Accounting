<UserControl x:Class="PriceTags.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PriceTags.Views" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:ui="clr-namespace:DevExpress.Mvvm.UI;assembly=DevExpress.Xpf.Core.v24.1" xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:enums="clr-namespace:PriceTags.Enums" xmlns:viewmodels="clr-namespace:PriceTags.ViewModels" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:MainViewModel}">
    <UserControl.Resources>
        <dxmvvm:ObjectToObjectConverter x:Key="QuantityTypeToStringConverter">
            <ui:MapItem Source="{x:Static enums:QuantityType.WeightInGrams}" Target="g"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.WeightInKilograms}" Target="kg"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.VolumeInMilliliters}" Target="mil"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.VolumeInLiters}" Target="l"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Count}" Target="kus"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Packets}" Target="bal"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Boxes}" Target="box"/>
        </dxmvvm:ObjectToObjectConverter>
        <BooleanToVisibilityConverter  x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="6"
                   Margin="10,0,10,4" Background="White" Grid.Row="0">         
                <StackPanel>
                    <dxb:BarManager>
                        <dxb:BarManager.Bars>

                            <dxb:Bar IsMainMenu="True" BarItemDisplayMode="ContentAndGlyph">
                                <dxb:BarButtonItem Content="Uložiť" Glyph="/Images/save.png" Padding="5" Margin="5"
                                    Command="{Binding SaveFileCommand}"/>
                                <dxb:BarButtonItem Content="Vytlačiť" Glyph="/Images/printer.png" Padding="5" Margin="5"
                                    Command="{Binding ExportToExcelCommand}"/>
                            </dxb:Bar>
                        </dxb:BarManager.Bars>
                    </dxb:BarManager>
                </StackPanel>
            </Border>
        
        <Grid Grid.Row="1" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="0" Height="10"/>

            <dxg:GridControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding PriceTags}" CurrentItem="{Binding SelectedPriceTag, Mode=TwoWay}"
                             SelectedItems="{Binding SelectedTags, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,0,0"
                AutoGenerateColumns="None" SelectionMode="MultipleRow">
                <dxg:GridControl.View>
                    <dxg:TableView AllowPerPixelScrolling="True" AutoWidth="True" ShowGroupPanel="False" ShowCheckBoxSelectorColumn="True"
                                   ShowFilterPanelMode="ShowAlways" NavigationStyle="Cell" AllowEditing="True" AllowColumnMoving="True"
                                   CheckBoxSelectorColumnWidth="35" NewItemRowPosition="Bottom"
                                           EnableImmediatePosting="True" AddingNewRow="OnAddingNewRow" />
                </dxg:GridControl.View>

                <dxg:GridColumn FieldName="Name" Header="Názov">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings MaxLength="25"/>
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Price" Header="Cena">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings DisplayFormat=" {0:N2} €" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Quantity" Header="Množstvo"/>

                <dxg:GridColumn FieldName="QuantityType" Header="Jednotka">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dxe:ComboBoxEdit EditValue="{Binding Row.QuantityType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsTextEditable="False" 
                                              BorderBrush="Transparent" BorderThickness="0" >
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type enums:QuantityType}" NameConverter="{StaticResource QuantityTypeToStringConverter}"/>
                                </dxmvvm:Interaction.Behaviors>
                            </dxe:ComboBoxEdit>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <dxg:GridColumn FieldName="IsSale" Header="Akcia?" Width="42"  MinWidth="42" MaxWidth="42"/>
                <dxg:GridColumn FieldName="SalePrice" Header="Akciová cena">
                    <dxg:GridColumn.EditSettings>
                    <dxe:TextEditSettings DisplayFormat=" {0:N2} €" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
            </dxg:GridControl>

            <Border Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" CornerRadius="4" DataContext="{Binding SelectedPriceTag}"  Margin="5,0,10,0"
                    VerticalAlignment="Top" Grid.Row="1">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="325"   >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="{Binding Name}" FontSize="36" FontWeight="Bold" TextAlignment="Left" Margin="10,0,0,0" 
                               Height="95" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Quantity}" FontSize="16"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding QuantityType, Converter={StaticResource QuantityTypeToStringConverter}}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PricePerUnit}" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} €'}" FontSize="40" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"/>
                        <TextBlock Text="{Binding SalePrice, StringFormat='{}{0:N2} €'}" FontSize="40" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                   Margin="0,0,0,40" Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Line  X1="0" Y1="65" X2="110" Y2="35" Stroke="Red" StrokeThickness="4" Margin="0,20,0,0" 
                               Visibility="{Binding IsSale,  Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
