<UserControl x:Class="PriceTags.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PriceTags.Views" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:ui="clr-namespace:DevExpress.Mvvm.UI;assembly=DevExpress.Xpf.Core.v24.1" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:enums="clr-namespace:PriceTags.Enums" 
             xmlns:viewmodels="clr-namespace:PriceTags.ViewModels" 
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:utils="clr-namespace:PriceTags.Utility" 
             xmlns:dx="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v24.1"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:MainViewModel}">
    <dxmvvm:Interaction.Behaviors>
        <dx:DialogService DialogWindowStartupLocation="CenterOwner">
            <dx:DialogService.ViewTemplate>
                <DataTemplate>
                    <local:HintView/>
                </DataTemplate>
            </dx:DialogService.ViewTemplate>
            <dx:DialogService.DialogStyle>
                <Style TargetType="Window">
                    <Setter Property="Height" Value="600"/>
                    <Setter Property="Width" Value="400"/>
                    <Setter Property="ResizeMode" Value="NoResize"/>
                </Style>
            </dx:DialogService.DialogStyle>
        </dx:DialogService>
    </dxmvvm:Interaction.Behaviors>
    <UserControl.Resources>
        <dxmvvm:ObjectToObjectConverter x:Key="QuantityTypeToStringConverter">
            <ui:MapItem Source="{x:Static enums:QuantityType.WeightInGrams}" Target="g"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.WeightInKilograms}" Target="kg"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.VolumeInMilliliters}" Target="ml"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.VolumeInLiters}" Target="l"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Count}" Target="ks"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Packets}" Target="bal"/>
            <ui:MapItem Source="{x:Static enums:QuantityType.Boxes}" Target="box"/>
        </dxmvvm:ObjectToObjectConverter>
        <BooleanToVisibilityConverter  x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate x:Key="PriceTagPrintTemplate">
            <Border BorderThickness="2" BorderBrush="LightGray" CornerRadius="4" VerticalAlignment="Top" Width="325" >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="323" Height="165">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding NameCapital}" FontSize="36" FontWeight="Bold" TextAlignment="Left" Margin="10,0,0,0" MaxWidth="315" MaxHeight="95"
                               Height="95" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" VerticalAlignment="Top"
                               utils:AutoFontScaler.IsEnabled="True"/>

                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Quantity}" FontSize="16"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding QuantityType, Converter={StaticResource QuantityTypeToStringConverter}}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PricePerUnit}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0" Visibility="{Binding HasDeposit, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding DepositAmount,  StringFormat='{}Záloha {0:N2} €'}" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} €'}" FontSize="40" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                            Visibility="{Binding IsNotSale, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   TextWrapping="Wrap" />

                            <TextBlock Text="{Binding SalePrice, StringFormat='{}{0:N2} €'}" FontSize="50" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                Margin="0,0,0,0" Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} €'}" FontSize="24" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                 Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,50" Foreground="Gray"/>
                            <TextBlock Text="AKCIA" Foreground="Red" FontSize="40" FontWeight="Bold" Margin="-140,0,50,25" 
                                Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}" >
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-10" />
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        <Line  X1="96" Y1="5" X2="165" Y2="20" Stroke="#A5FF0000" StrokeThickness="3" Margin="0,20,0,40" 
                            Visibility="{Binding IsSale,  Converter={StaticResource BooleanToVisibilityConverter}}"/>       
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="6"
                   Margin="10,0,10,4" Background="White" Grid.Row="0">         
                <StackPanel>
                    <dxb:BarManager>
                        <dxb:BarManager.Bars>

                            <dxb:Bar IsMainMenu="True" BarItemDisplayMode="ContentAndGlyph">
                                <dxb:BarButtonItem Content="Uložiť" Glyph="/Images/save.png" Padding="5" Margin="5"
                                    Command="{Binding SaveFileCommand}"/>
                                <dxb:BarButtonItem Content="Vytlačiť" Glyph="/Images/printer.png" Padding="5" Margin="5"
                                    Command="{Binding PrintCommand}" />
                                <dxb:BarButtonItem Content="Nápoveda názvu" Glyph="/Images/bulb.png" Padding="5" Margin="5"
                                    Command="{Binding HintCommand}" />
                            </dxb:Bar>
                        </dxb:BarManager.Bars>
                    </dxb:BarManager>
                </StackPanel>
            </Border>
        
        <Grid Grid.Row="1" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="0" Height="10"/>

            <dxg:GridControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding PriceTags}" CurrentItem="{Binding SelectedPriceTag, Mode=TwoWay}"
                             SelectedItems="{Binding SelectedTags, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,0,0"
                AutoGenerateColumns="None" SelectionMode="MultipleRow" PreviewKeyDown="OnPreviewKeyDown" >
                <dxg:GridControl.View>
                    <dxg:TableView AllowPerPixelScrolling="True" AutoWidth="False" ShowGroupPanel="False" ShowCheckBoxSelectorColumn="True"
                                   ShowFilterPanelMode="ShowAlways" NavigationStyle="Cell" AllowEditing="True" AllowColumnMoving="True"
                                   CheckBoxSelectorColumnWidth="35" NewItemRowPosition="Bottom" EditorShowMode="MouseUpFocused" 
                                           EnableImmediatePosting="True" AddingNewRow="OnAddingNewRow" ShowingEditor="TableView_ShowingEditor" 
                                   HiddenEditor="TableView_HidingEditor"  />
                </dxg:GridControl.View>

                <dxg:GridColumn FieldName="Name" Header="Názov" Width="*">
                    <dxg:GridColumn.EditSettings>
                        <dxe:ComboBoxEditSettings 
                            ItemsSource="{Binding DataContext.Names, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            IsTextEditable="True" 
                            ImmediatePopup="True" 
                            AutoComplete="True" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <dxg:GridColumn FieldName="Price" Header="Cena" Width="55" MaxWidth="55"  HorizontalHeaderContentAlignment="Right">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings DisplayFormat=" {0:N2} €" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Quantity" Header="Množstvo" Width="55" MaxWidth="55" HorizontalHeaderContentAlignment="Right"/>

                <dxg:GridColumn FieldName="QuantityType" Header="Jednotka" Width="60" MaxWidth="60">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dxe:ComboBoxEdit EditValue="{Binding Row.QuantityType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsTextEditable="False" 
                                              BorderBrush="Transparent" BorderThickness="0" >
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type enums:QuantityType}" NameConverter="{StaticResource QuantityTypeToStringConverter}"/>
                                </dxmvvm:Interaction.Behaviors>
                            </dxe:ComboBoxEdit>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <dxg:GridColumn FieldName="SalePrice" Header="Akciová cena" Width="80" MaxWidth="80" HorizontalHeaderContentAlignment="Right">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings DisplayFormat=" {0:N2} €" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <dxg:GridColumn FieldName="DepositAmount" Header="Záloha" Width="55" MaxWidth="55" HorizontalHeaderContentAlignment="Right">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings DisplayFormat=" {0:N2} €" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <dxg:GridColumn Width="25" MinWidth="25" MaxWidth="25">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dx:SimpleButton Command="{Binding DataContext.DeleteRowCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding RowData.Row}" BorderThickness="0" Width="23" 
                                      BorderBrush="Transparent" Glyph="/Images/remove2.png" Padding="3" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
            </dxg:GridControl>

            <Border Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" CornerRadius="4" DataContext="{Binding SelectedPriceTag}"  Margin="10,0,10,0"
                    VerticalAlignment="Top" Grid.Row="1" x:Name="PreviewContainer">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="325" MaxHeight="165"  Height="165" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> 
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding NameCapital, NotifyOnTargetUpdated=True}" FontSize="36" FontWeight="Bold" TextAlignment="Left" Margin="10,0,0,0" 
                               Height="95" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top"
                               TextWrapping="Wrap" utils:AutoFontScaler.IsEnabled="True" />
                    
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Quantity}" FontSize="16"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding QuantityType, Converter={StaticResource QuantityTypeToStringConverter}}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PricePerUnit}" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0" Visibility="{Binding HasDeposit, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding DepositAmount,  StringFormat='{}Záloha {0:N2} €'}" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} €'}" FontSize="40" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                   Visibility="{Binding IsNotSale, Converter={StaticResource BooleanToVisibilityConverter}}" MaxWidth="315" MaxHeight="95"/>
                        
                        
                        <TextBlock Text="{Binding SalePrice, StringFormat='{}{0:N2} €'}" FontSize="50" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                   Margin="0,0,0,0" Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} €'}" FontSize="24" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom"
                                    Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,50" Foreground="Gray"/>
                        <TextBlock Text="AKCIA" Foreground="Red" FontSize="40" FontWeight="Bold" Margin="-140,0,50,25" 
                                   Visibility="{Binding IsSale, Converter={StaticResource BooleanToVisibilityConverter}}" >
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-10" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                        <Line  X1="96" Y1="5" X2="165" Y2="20" Stroke="#A5FF0000" StrokeThickness="3" Margin="0,20,0,40" 
                               Visibility="{Binding IsSale,  Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
